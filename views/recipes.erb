
<div class="container">
<% if Recipe.any? %>
  <% Recipe.all.each() do |recipe| %>
    <ul>
      <li><a href="/recipe/<%= recipe.id() %>"><%= recipe.name %>   </a><button class= "btn btn-xs btn-danger"><a href="/delete/<%= recipe.id %>" class='delete'>x</a></button></li>
    </ul>
  <% end %>

  <% else %>
    <h1>There are no recipes yet! </h1>
  <% end %>

  <button class= "btn btn-default"><a href="/">Back</a></button>
</div>
